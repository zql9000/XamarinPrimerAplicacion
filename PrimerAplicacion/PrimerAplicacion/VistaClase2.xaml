<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimerAplicacion.VistaClase2">
    <ContentPage.Resources>
        <Style x:Key="labelVerde" TargetType="Label">
            <Setter Property="TextColor" Value="Green" />
        </Style>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="slPrincipal">
                <Label Text="Texto de prueba"
                       Style="{StaticResource labelVerde}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>